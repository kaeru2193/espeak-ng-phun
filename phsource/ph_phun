  FMT(vowel/oo_3)
endphoneme

phoneme i
  vwl starttype #i endtype #i
  length 180
  IfNextVowelAppend(;)
  FMT(vowel/i)
endphoneme

phoneme i:
  vwl starttype #i endtype #i
  length 250
  IfNextVowelAppend(;)
  FMT(vowel/i)
endphoneme

phoneme aI
  vwl  starttype #a  endtype #i
  length 250
  FMT(vdiph/ai_2)
endphoneme

phoneme aO
  vwl starttype #a endtype #o
  length 250
  FMT(vdiph/aau_2)
endphoneme

phoneme @A
  vwl starttype #u endtype #a
  length 250
  FMT(vdiph2/oa)
endphoneme

phoneme @O
  vwl starttype #u endtype #o
  length 250
  FMT(vdiph2/uo)
